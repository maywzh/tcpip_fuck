# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.cpp]
max_line_length = 120

[*.h]
max_line_length = 120

# Special configurations for Markdown files
[*.md]
max_line_length = off